{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "lib": [
      "es2016"
    ],
    "outDir": "./dist",
    "strictNullChecks": true,
    // "strictPropertyInitialization": true,
    "removeComments": true,
    "noImplicitUseStrict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/types",
    ]
  },
  "include": [
    "./src"
  ],
}